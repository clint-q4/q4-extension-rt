{
  "name": "clipme-q4-extension",
  "displayName": "ClipMe Q4 extension",
  "version": "0.9.1",
  "description": "A simple extension to save links and snippets",
  "author": "clintonsebastian",
  "packageManager": "npm@8.5.5",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "css-build": "sass sass/_all.scss css/styles.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "@plasmohq/storage": "^0.8.1",
    "@uiw/react-textarea-code-editor": "^2.0.3",
    "jquery": "^3.6.1",
    "jsdom": "^20.0.0",
    "jwt-decode": "^3.1.2",
    "plasmo": "0.52.1",
    "pocketbase": "^0.8.0-rc4",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-bulma-components": "^4.1.0",
    "use-local-storage": "^2.3.6"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "1.2.0",
    "@types/chrome": "0.0.193",
    "@types/node": "18.6.4",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "assert": "^2.0.0",
    "bulma": "^0.9.4",
    "sass": "^1.55.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "prettier": "2.7.1"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
  }
}
